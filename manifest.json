{
  "manifest_version": 3,
  "name": "ContextMemo",
  "version": "1.0.0",
  "description": "Persistent web highlighter and notes",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "index.html",
    "default_title": "ContextMemo"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
